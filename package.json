{
  "name": "nextjs-boilerplate",
  "version": "0.1.0",
  "description": "Next.js boilerplate with husky, lint-staged, eslint + prettier, jest, react-testing-library, storybook, ghaction and plop.",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "prettier:format": "prettier --write .",
    "prettier:check": "prettier --check \"**/*.{ts,tsx,json}\"",
    "lint": "next lint",
    "eslint:format": "eslint src --fix",
    "test": "jest test",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build",
    "postinstall": "husky install",
    "generate": "pnpm plop --plopfile ./.plop/plopfile.js",
    "prepare": "husky install",
    "commit": "git-cz"
  },
  "engines": {
    "node": ">=18.17.1"
  },
  "packageManager": "pnpm@8.10.2",
  "dependencies": {
    "@t3-oss/env-nextjs": "0.9.2",
    "chart.js": "^4.4.2",
    "clsx": "2.1.0",
    "dayjs": "^1.11.10",
    "framer-motion": "^11.0.8",
    "next": "14.1.3",
    "next-themes": "^0.2.1",
    "react": "18.2.0",
    "react-chartjs-2": "^5.2.0",
    "react-dom": "18.2.0",
    "react-icons": "^5.0.1",
    "recoil": "^0.7.7",
    "tailwind-merge": "2.2.1",
    "zod": "3.22.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.0.3",
    "@commitlint/config-conventional": "^19.0.3",
    "@storybook/addon-essentials": "^8.0.1",
    "@storybook/addon-interactions": "^7.6.17",
    "@storybook/addon-links": "^7.6.17",
    "@storybook/blocks": "^7.6.17",
    "@storybook/nextjs": "^7.6.17",
    "@storybook/react": "^7.6.17",
    "@storybook/testing-library": "^0.2.2",
    "@testing-library/jest-dom": "6.4.2",
    "@testing-library/react": "14.2.1",
    "@testing-library/user-event": "14.5.2",
    "@types/jest": "29.5.12",
    "@types/node": "20.11.17",
    "@types/react": "18.2.63",
    "@types/react-dom": "18.2.19",
    "@typescript-eslint/eslint-plugin": "7.0.0",
    "@typescript-eslint/parser": "6.21.0",
    "autoprefixer": "10.4.18",
    "babel-jest": "29.7.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "8.56.0",
    "eslint-config-next": "14.1.2",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import-helpers": "1.3.1",
    "eslint-plugin-prettier": "5.1.3",
    "eslint-plugin-react": "7.33.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-plugin-storybook": "0.8.0",
    "eslint-plugin-testing-library": "6.2.0",
    "husky": "^8.0.0",
    "identity-obj-proxy": "3.0.0",
    "jest": "29.7.0",
    "jest-environment-jsdom": "29.7.0",
    "jest-watch-typeahead": "2.2.2",
    "lint-staged": "15.2.2",
    "pinst": "3.0.0",
    "plop": "4.0.1",
    "postcss": "8.4.35",
    "prettier": "3.2.5",
    "prettier-plugin-tailwindcss": "0.5.11",
    "storybook": "^7.6.17",
    "tailwind-scrollbar": "3.1.0",
    "tailwindcss": "3.4.1",
    "typescript": "5.3.3"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": [
      "eslint --fix",
      "eslint",
      "prettier --write"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
